@{
    ViewBag.Title = "Home Page";
}

<head>
    <title>Parents Bank</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <style>
        .jumbotron {
            background-color: #f4511e; /* Orange */
            color: black;
            background: url("/Content/Images/piggybankboy-stock.jpg") no-repeat center;
            width: 100%;
            height: 800px;
            background-size: cover;
            padding: 100px 25px;
            font-family: Lato, sans-serif;
            left: 0;
            right: 0;
        }

        .bg-grey {
            background-color: #f6f6f6;
        }

        .container-fluid {
            padding: 60px 50px;
            background: url("/Content/Images/brick.jpg") no-repeat center;
            background-size: cover;
        }

        .logo-small {
            color: #FC4889;
            font-size: 50px;
        }

        .logo {
            color: #6CB3E9;
            font-size: 200px;
        }

        .carousel-control.right, .carousel-control.left {
            background-image: none;
            color: #FC4889;
            
        }

        .carousel-indicators li {
            border-color: black;
        }

            .carousel-indicators li.active {
                background-color: #FC4889;
                color: #FC4889;
            }

        .item h4 {
            font-size: 19px;
            line-height: 1.375em;
            font-weight: 400;
            font-style: italic;
            margin: 70px 0;
        }

        .item span {
            font-style: normal;
        }

        th{
            text-align: right
        }
       

    </style>

</head>

<body>
    <div id="jumbotron-home" class="jumbotron text-center">
        <br />
        <br /><br /><br /><br /><br /><br /><br />
        <h1 color="black">Parents Bank</h1>
        @*<p>Teach your children the importance of Saving</p>*@
    </div>

    <div class="container-fluid text-center">
        <h2>What we offer</h2>
        <br />
        <br>
        <div class="row">
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-book logo-small"></span>
                <h4>Account Management</h4>
                <br />
            </div>
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-usd logo-small"></span>
                <h4>Interest Calculation</h4>
                <br />

            </div>
            <div class="col-sm-4">
                <span class="glyphicon glyphicon-gift logo-small"></span>
                <h4>Wishlist Management</h4>
                
            </div>
        </div>
        <br>
        </div>

    
        
        
        <div id="myCarousel" class="carousel slide text-center" data-ride="carousel">
            <!-- Indicators -->
            <h2>What our Founders Say</h2>
            
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
           
                <br />
                <br />
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active" style="margin-left: 0px">
                    @*<img src="~/Content/Images/Adarsh.jpg" alt="Adarsh">*@
                    <table class="table">
                        <tr>
                            
                            <td><img class="" src="~/Content/Images/Adarsh.jpg" height="400" width="400" alt="Adarsh"></td>
                            <td><img class="" src="~/Content/Images/q1.jpg" height="400" width="400" alt="Adarsh-q1"></td>

                        </tr>
                    </table>
                </div>

         

                <div class="item">
                    @*<img src="~/Content/Images/Suresh-2.jpg" alt="Suresh">*@
                    <table class="table">
                        <tr>
                            <td><img src="~/Content/Images/Suresh-2.jpg" height="400" width="400"  alt="Adarsh"></td>
                            <td><img class="" src="~/Content/Images/q2.png" height="400" width="400" alt="Suresh-q2"></td>
                        </tr>
                    </table>
                
                </div>

            <div class="item">
                @*<img src="~/Content/Images/Tamara.jpg" alt="Tamara">*@
                <table class="table">
                    <tr>
                        <td><img src="~/Content/Images/Tamara.jpg" height="400" width="400" alt="Adarsh"></td>
                        <td><img class="" src="~/Content/Images/q3.png" height="400" width="400" alt="Tamara-q3"></td>
                    </tr>
                </table>
            </div>
                
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>

            
        </div>


</body>

