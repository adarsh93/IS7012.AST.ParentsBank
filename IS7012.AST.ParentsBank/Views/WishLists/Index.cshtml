    @model IEnumerable<IS7012.AST.ParentsBank.Models.WishList>

@{
    ViewBag.Title = "Index";
}

<h2>Your Wishlist Items</h2>

<p>
    @Html.ActionLink("+Add Item", "Create") | 
    @Html.ActionLink("Search for Wishlist Items", "Search")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.AccountId)*@
            Account Id
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Account)*@
            Account Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DateAdded)*@
            Date Added
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Cost)*@
            Item Cost
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Description)*@
            Item Description
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Link)*@
            Link to Item
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Purchased)*@
            Item Purchased?
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccountId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.RecipientName)
        </td>
        <td>
            @item.getAddedDate()
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchased)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @if (!(item.Account.RecipientEmail == User.Identity.Name))
            {
                 @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
                        
        </td>
    </tr>
}

</table>
